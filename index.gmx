var (
	Backdrop    Backdrop
	Bomb        Bomb
	TextIntro   TextIntro
	GameLogo    GameLogo
	GameStart   GameStart
	MyAircraft  MyAircraft
	MiddleEnemy MiddleEnemy
	HugeEnemy   HugeEnemy
	Bullet      Bullet
	SmallEnemy  SmallEnemy
	GameOver    GameOver
	YouWin      YouWin
	Restart     Restart

	bombs int
	score int
)

const (
	winscore = 500
)

const (
	msgBattle   = "battle"
	msgKillAll  = "kill all"
	msgYouWin   = "you win"
	msgGameOver = "game over"
	msgRestart  = "restart"
)

func addScore(val int) {
	score += val
	if score > winscore {
		broadcast msgYouWin
	}
}

func restart() {
	reload "index.json"
	GameStart.hide
	broadcast msgBattle
}

run "res", {Title: "Aircraft War (by Go+ spx engine)"}
